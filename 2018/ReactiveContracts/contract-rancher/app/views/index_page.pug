html
    head
        meta(charset = "utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href = "/static/css/style.css")
    body
        p Свободной памяти: #{free_mem} МБ
        br
        p Всего памяти: #{total_mem} МБ
        br
        p Запущено контейнеров: #{active_count}
        form
            input.add-row(type='button' value='Добавить инстанс')
        table
            thead
                tr
                    th Действие
                    th Название контейнера
                    th Порты
            tbody

                each container in containers
                    tr
                        td
                            input(type='checkbox', name='record')
                        td container.name
                        td container.ports
        button.delete-row(type='button') Удалить инстанс
        script(src = '/static/js/jquery-3.3.1.min.js', type = "text/javascript")
        script(src = "/static/js/process_data.js", type = "text/javascript")